-# itineraries#index

- title "Маршруты"

- content_for :content do
 = link_to "Создать маршрут", new_itinerary_path, class: 'btn btn-primary'

 %ul
  - for itinerary in @itineraries do
   %li
    %span.del_form
     = button_to "X", '#confirm', method: :delete, class: 'btn btn-default'
    %span.itinerary_name
     = link_to itinerary.name, edit_itinerary_path(itinerary)
    %span.itinerary_details
     = link_to "Подробнее", itinerary_path(itinerary)
    %span.itinerary_description= itinerary.description

 #confirm.modal.fade{ tabindex: '-1', role: 'dialog', :'aria-labelledby' => "Confirm", :'aria-hidden' => 'true' }
  .modal-dialog
   .modal-content
    .modal-header
     %button.close{ type: 'button', :'aria-hidden' => 'true', :'data-dismiss' => 'modal' }
      &times;
     %h4.modal-title
      Confirm your action
    .modal-body
     Remove?
    .modal-footer
     %button.btn.btn-default{ :'data-dismiss' => 'modal' }
      Nope
     %button.btn.primary
      Yep
