-# devise#new
= title('Вход')

- content_for :content do

  #user-form.col-sm-4.col-sm-offset-4
    .panel-heading
      %h2 Вход

    .panel-body
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .form-group
          = f.label :email, 'Email'
          = f.text_field :email, :autofocus => true, type: 'email', class: 'form-control'
        .form-group
          = f.label :password, I18n.t(:pass_field)
          = f.password_field :password, class: 'form-control'
        - if devise_mapping.rememberable?
          .checkbox
            = f.check_box :remember_me
            = f.label 'Запомнить меня'
        .devise-ctrl= f.submit I18n.t(:sign_in_action), class: 'btn btn-primary'

      .devise-ctrl= render 'devise/shared/links'
