-# devise#new_registration

- title 'Регистрация'

- content_for :content do

  = render 'devise/shared/errors'

  #user-form.col-sm-4.col-sm-offset-4
    .panel-heading
      %h2 Регистрация

    .panel-body
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        .form-group
          = f.label :name, I18n.t(:username)
          = f.text_field :name, :autofocus => true, class: 'form-control'
        .form-group
          = f.label :email
          = f.email_field :email, class: 'form-control'
        .form-group
          = f.label :password, 'Пароль'
          = f.password_field :password, class: 'form-control'
        .form-group
          = f.label :password_confirmation, 'Повторите пароль'
          = f.password_field :password_confirmation, class: 'form-control'
        .devise-ctrl= f.submit 'Зарегестрироваться', class: 'btn btn-primary'

      .devise-ctrl= render 'devise/shared/links'
